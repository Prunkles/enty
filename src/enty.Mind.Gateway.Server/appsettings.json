{
    "Serilog": {
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "System": "Information",
                "Microsoft": "Information"
            }
        },
        "WriteTo:Console": {
            "Name": "Console",
            "Args": {
                "outputTemplate": "[{Timestamp:HH:mm:ss} {SourceContext} {Level:u3}] {Message:lj}{NewLine}{Exception}",
                "restrictedToMinimumLevel": "Information",
                "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                "applyThemeToRedirectedOutput": true
            }
        }
    },
    "PLogging": {
        "BasePath": "./logs/",
        "SourceContextTemplates": [
            { "SourceContext": "TestLoggerA", "Template": "[{@t:HH:mm:ss.fff zzz} {@l:u3}] {@m}\n{@x}" },
            { "SourceContext": "TestLoggerB", "Template": "[{@t:HH:mm:ss.fff zzz} {@l:u3}] {@m}\n{@x}" }
        ]
    },
    "Kestrel": {
        "Endpoints": {
            "Http": {
                "Url": "http://0.0.0.0:5015"
            }
        }
    },
    "Mind": {
        "Address": "https://localhost:5010"
    }
}
